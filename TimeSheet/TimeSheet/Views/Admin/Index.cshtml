<section id="tabs" class="project-tab">
    <div class="container" style="width:170%; padding-top:15px; margin-left: 1px; border-color:lightgray">
        <nav>
            <ul class="nav nav-tabs" style="padding-top:15px" id="myTab" role="tablist">
                <li style="background-color:lightgray; font:14px; color:black" class="active"><a data-toggle="tab" href="#tblCustomers">OPPORTUNITIES</a></li>
                <li style="background-color:lightgray"><a data-toggle="tab" href="#MANAGERESOURCES">RESOURCES</a></li>
                <li style="background-color:lightgray"><a data-toggle="tab" href="#MANAGEPROJECTS">PROJECTS</a></li>
            </ul>
        </nav>
        <div class="tab-content" @*style="border-width:thin;border-style:solid;border-color:gray;width:100%;padding-top:10px;border-width:thin;margin-right:0px;border-color:lightgray"*@>

            <div id="tblCustomers" class="tab-pane fade  in active" role="tabpanel">
                <table class="table table-bordered table-responsive" id="tblCustomers">
                    <thead style="background-color:lightgray">
                        <tr>
                            <th>
                                ID
                            </th>
                            <th>
                                Customer
                            </th>
                            <th>
                                Opportunity
                            </th>
                            <th>
                                Is Active
                            </th>
                        </tr>
                    </thead>

                    @foreach (var item in Model.OpportunityList)


                    {
                        <tr>
                            <td class="Id"><span>@item.Id</span> </td>
                            <td>@item.ProjectName</td>
                            <td>@item.OpportunityNumber</td>
                            <td style="font-size:6px;height:10px">
                                <input style="font-size:6px" type="checkbox" data-toggle="toggle" name="AssignedGroups[@item.IsActive].Assigned" @(item.IsActive ? "checked" : "") value="@item.IsActive" id="OpportunityCheckBoxID" />
                            </td>
                        </tr>
                    }

                </table>
            </div>


            <div id="MANAGERESOURCES" class="tab-pane fade" role="tabpanel">
                <table class="table table-bordered table-responsive" id="MANAGERESOURCES">
                    <thead style="background-color:lightgray">
                        <tr>
                            <th>
                                Resource Name
                            </th>
                            <th>
                                Warehouse
                            </th>

                            <th>
                                Is Active
                            </th>
                        </tr>
                    </thead>

                    @foreach (var item in Model.ResourceList)


                    {
                        <tr>

                            <td>@item.ResourceName</td>
                            <td>@item.Warehouse</td>
                            <td style="font-size:6px;height:10px">
                                <input style="font-size:6px" type="checkbox" data-toggle="toggle" name="AssignedGroups[@item.IsActive].Assigned" @(item.IsActive ? "checked" : "") value="@item.IsActive" id="OpportunityCheckBoxID" />
                            </td>
                        </tr>
                    }
                </table>
            </div>

            <div id="MANAGEPROJECTS" class="tab-pane fade" role="tabpanel">
                @*<table class="table table-bordered table-responsive" id="MANAGERESOURCES">
                    <thead style="background-color:lightgray">
