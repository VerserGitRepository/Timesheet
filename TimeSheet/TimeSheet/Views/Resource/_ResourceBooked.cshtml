
@model  TimeSheet.Models.TimeSheetViewModel

<div>

    <div class="modal-header" style="background-color:lightgray;width:1029px">
        <h5 class="modal-title text-center"style="font-weight: bold;">Resource Details</h5>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    @if (Model.CandidateTimeSheetList.Count > 0)
    {
        <div style="align-content:center;padding-top:15px;padding-bottom:10px;padding-left:20px;width:900px">
            <table id="tblCustomers" class="table-striped table-bordered text-center" style="align-content:center;padding-top:15px;padding-bottom:10px;width:1000px">
                <thead style="background-color:#FFA500;color:white">
                    <tr>

                        <th>CandidateName</th>
                        <th>Activity</th>
                        <th>BookDate </th>
                        <th>StartTime</th>
                        <th>EndTime</th>
                        <th style="width:10px">OLA</th>
                        <th style="width:10px">Actual</th>
                        @*<th style="width:10px">Comments</th>*@
                        @*<th style="width:10px"></th>*@
                    </tr>
                </thead>
                <tbody class="table">
                    @foreach (var item in Model.CandidateTimeSheetList)
                    {
                        <tr>


                            <td class="CandidateName">
                                @Html.DisplayFor(modelItem => item.CandidateName)
                            </td>
                            <td class="Activity">
                                @Html.DisplayFor(modelItem => item.Activity)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Day)
                            </td>

                            <td class="StartTime">
                                @Html.DisplayFor(modelItem => item.StartTime)
                            </td>

                            <td class="EndTime">
                                @Html.DisplayFor(modelItem => item.EndTime)
                            </td>

                            <td class="OLATarget">
                                @Html.DisplayFor(modelItem => item.OLATarget)
                            </td>
                            <td class="ActualQuantity">
                                @Html.DisplayFor(modelItem => item.ActualQuantity)
                            </td>





                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    else
    {
        <div style="align-content:center;padding-top:15px;padding-bottom:10px;padding-left:20px;width:500px">
            <h4 style="text-align:center;padding-bottom:5px;padding-left:35px"> No booking </h4>
        </div>
    }
</div>

<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript" src="http://ajax.cdnjs.com/ajax/libs/json2/20110223/json2.js"></script>


<style>
    .modal-dialog {
        width: 1050px;
        margin: 30px auto;
    }
</style>
