                                                     }
                                                 });
                                                 row.find(".Update").hide();
                                                 row.find(".Cancel").hide();
                                                 row.find("#Rate").hide();

                                                 $(".Edit").show();
                                                // return;
                                         }
                                 });
                                 $('#myModal').modal('show');
                                 $(".Cancel").hide();
                                 return;
