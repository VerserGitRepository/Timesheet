                             cancel: function () {
                                 $('#myModal').modal('show');
                                 var row = $(rowid).closest("tr");
                                 $("td", row).each(function () {
                                     if ($(this).find("input").length > 0) {
                                         $(this).find("input").hide();
                                         $(this).find("span").show();
                                         $(this).toggleClass('selected');

                                     }
                                 });
                                 row.find(".Update").hide();
                                 row.find(".Cancel").hide();
                                 row.find("#Rate").hide();

                                 $(".Edit").show();
                                 return;
                             }
                         }

                     });
            },
            error: function () {
                alert("Dynamic content load failed.");
            }
        });



    }

</script>
