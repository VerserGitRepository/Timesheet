<div class="container" style="padding-top:2px;padding-bottom:0px;margin-left:0px;padding-left:0px;padding-right:10px">

    @using (Html.BeginForm("ExportApprovedBookings", "ApprovedBooking", FormMethod.Post))
    {
        <div class="row">
            <button type="submit" class="btn btn-default btn-sm" style="padding-left:10px;padding-top:2px;margin-left:10px">
                <span class="glyphicon glyphicon-export"></span> Export
            </button>
        </div>
    }
    <div class="row">
        <div class="col-md-12">
            <table id="TimeSheetTable" class="table table-striped table-bordered" cellspacing="0">
                <thead style="background-color:#FFA500;color:white; ">
                    <tr>
                        <th>Resource</th>
                        <th>Opportunity</th>
                        <th>BookDate </th>
                        <th>StartTime</th>
                        <th>EndTime</th>
                        <th>Project</th>
                        <th>JobNo</th>
                        <th>Activity</th>
                        <th>OLA</th>
                        <th>Actual</th>
                        <th>BreakTime</th>
                        <th>Warehouse</th>
                        <th>Status</th>
                        <th>Approver</th>
                        <th>WorkHours</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (TimeSheet.Models.ApprovedTimesheetModel item in Model.ApprovedTimeSheetListt)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CandidateName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OpportunityNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Day)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.StartTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProjectName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.JobNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Activity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OLATarget)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ActualQuantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BreakHours)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WarehouseName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApprovedBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalWorkedHours)
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div id='myModal' class='modal'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>
<div id='EditModal' class='modal'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='EditModalContent'></div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#TimeSheetTable').dataTable({
            responsive: true
        });
        $('.dataTables_filter').addClass('pull-right');       
    });

</script>
