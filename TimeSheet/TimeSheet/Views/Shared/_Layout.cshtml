<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Verser Technology LifeCycles</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse fixed-top" style="margin-left:0px;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div id="LogoImage" style="text-align:left">
                    <img src="~/Images/Verser.png" style="height:43px; width:220px ;vertical-align:top;margin-right:2px; background-color:#D3D3D3" />
                </div>
            </div>
            <script src="~/Scripts/respond.js"></script>
            <div class="navbar-collapse collapse" style="font-size:smaller">
                @if (@Session["Username"] != null)
                {
                <ul class="nav navbar-nav">
                    @*@Html.ActionLink("TIME SCHEDULER", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                    <li>@Html.ActionLink("BOOKINGS", "Index", "Home")</li>

                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">CALENDAR AND TIMELINE</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("CALENDAR", "Index", "ManageCalender")</li>
                            <li>@Html.ActionLink("RESOURCE TIMELINE", "Index", "ResourceTimeline")</li>
                            <li>@Html.ActionLink("RESOURCE SPECIFICS", "Index", "Resource")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("BOOK RESOURCE", "Register", "Resource")</li>
                        @if (Session["ProjectManager"] != null || Session["Administrator"] != null)
                        {
                            <li>@Html.ActionLink("PROJECTION", "Index", "Projection")</li>
                        }
                        @if (Session["Administrator"] != null)
                            {
                                <li>@Html.ActionLink("ADMINISTRATION", "Index", "Admin")</li>
                            }
                        <li class="dropdown">
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">REPORTS</a>
                            <ul class="dropdown-menu">
                                <li><a href="https://app.powerbi.com/view?r=eyJrIjoiYWJkNGM5NmItNTRhZS00MDAwLTk0ZWYtZjRiOTU3OTNiZGY5IiwidCI6IjI0Y2IwYjA4LWI1OTEtNDE2NC05MTc0LThlMTI5MzlkNDA0NSJ9" target="_blank">TimeSheet</a></li>
                                <li><a href="https://app.powerbi.com/view?r=eyJrIjoiM2Y1YzRlMTMtZmY4YS00MmRkLWIwZGEtZTEwYWU3YzU4YjliIiwidCI6IjI0Y2IwYjA4LWI1OTEtNDE2NC05MTc0LThlMTI5MzlkNDA0NSJ9" target="_blank">Resource Available</a></li>
                                <li><a href="https://app.powerbi.com/view?r=eyJrIjoiMjU1ODJiMTAtNDNiZS00OGRiLThmNWQtNTk1YjNiZjI1MDhmIiwidCI6IjI0Y2IwYjA4LWI1OTEtNDE2NC05MTc0LThlMTI5MzlkNDA0NSJ9" target="_blank">Projections</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav" @*style="float:right"*@>
                        <li>@Html.ActionLink("LOGOUT", "Logout", "Login")</li>
                    </ul>
                }
                @if (@Session["Username"] == null)
                {
                    <ul>
                        <li class="nav navbar-nav" style="float:right">@Html.ActionLink("Login", "Login", "Login")</li>
                    </ul>
                }
            </div>
        </div>
    </div>
    @*container-fluid body-content*@

    <div class="container body-content" >
        @if (HttpContext.Current.Session["ResultMessage"] != null)
        {
            <div class="alert alert-info text-center  alert-dismissible" role="alert" style="margin-left:0px">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                @HttpContext.Current.Session["ResultMessage"]
            </div>
            HttpContext.Current.Session["ResultMessage"] = null;
        }

        @if (HttpContext.Current.Session["ErrorMessage"] != null)
        {
            <div class="alert alert-danger text-center  alert-dismissible" role="alert" style="margin-left:0px">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                @HttpContext.Current.Session["ErrorMessage"]
            </div>
            HttpContext.Current.Session["ErrorMessage"] = null;
        }

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Verser TIME SCHEDULER</p>
        </footer>
    </div>

    @*  Calender Scripts
        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
    *@

    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")*@
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>
