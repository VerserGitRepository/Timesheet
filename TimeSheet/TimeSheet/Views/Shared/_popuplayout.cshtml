
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - VERSER TimeSheets</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="@Url.Content("~/Content/themes/base/jquery-ui.min.css")" rel="stylesheet" />

</head>
<body style="width:100%;"> @*style="width:900px;"*@
   
    <div class="container body-content">
        @if (@HttpContext.Current.Session["ResultMessage"] != null)
        {
            <div class="alert alert-info alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                @HttpContext.Current.Session["ResultMessage"]
            </div>
        @@HttpContext.Current.Session["ResultMessage"] = null;
        }
        @RenderBody()
        
        <footer >
            <p>&copy; @DateTime.Now.Year - VERSER TECHNOLOGY LIFECYCLES</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
