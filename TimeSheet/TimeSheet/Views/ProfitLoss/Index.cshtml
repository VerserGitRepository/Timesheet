<div class="container" @*style="margin-left:0px;width:120%;margin-right:50px"*@>

    <div class="row">
        <div class="col-md-12">
            <table id="TimeSheetTable" class="table table-striped table-bordered" cellspacing="0">
                <thead style="background-color:#FFA500;color:white; ">
                    <tr>
                        <th>Opportunity</th>
                        <th>Project</th>
                        <th>Service Activity</th>
                      
                        <th>Qty</th>
                        <th>Date Allocated</th>
                        <th>Date Invoiced</th>
                        <th>Total Profit</th>
                    </tr>
                </thead>

                 <tbody>
                    @foreach (TimeSheet.Models.ProfitLossModel item in Model.ProfitLossList)
                    {
                     <tr>
                         <td>
                             <a href="javascript:void(0);" class="opportunityNumber" data-id="@item.opportunityNumber">@Html.DisplayFor(modelItem => item.opportunityNumber)</a>

                         </td>
                         <td>
                             @Html.DisplayFor(modelItem => item.projectName)
                         </td>

                         <td>
                             @Html.DisplayFor(modelItem => item.serviceDescription)
                         </td>
                         <td>
                             @Html.DisplayFor(modelItem => item.quantity)
                         </td>
                         <td>
                             @Html.DisplayFor(modelItem => item.dateAllocated)
                         </td>
                         <td>
                             @Html.DisplayFor(modelItem => item.dateInvoiced)
                         </td>
                         <td>
                             @Html.DisplayFor(modelItem => item.totalProfit)
                         </td>
                     </tr>
                    }
                </tbody>
               
            </table>

        </div>
    </div>
</div>


<div id='myModal' class='modal'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>
<div id='EditModal' class='modal'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='EditModalContent'></div>
        </div>
    </div>
</div>
<div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title custom_align" id="Heading">Projection Weekly Details</h4>
            </div>
            <div class="modal-body">
                <table id="tblCustomers" class="table-bordered table-responsive-md text-center table-hover table-scroll" style="align-content:center;padding-bottom:10px;width:550px">
                    <thead style="background-color:#FFA500;color:white">
                        <tr>
                            <th>Opportunity</th>
                            <th>ProjectName</th>
                            <th>Activity</th>
                            <th style="width:50px">StartDate </th>
                            <th>Week 1</th>
                            <th>Week 2</th>
                            <th>Week 3</th>
                            <th>Week 4</th>
                            <th>Week 5</th>
                            <th>Week 6</th>

                        </tr>
                    </thead>
                </table>
            </div>
            @*<div class="modal-footer ">
                    <button type="button" class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span> Update</button>
                </div>*@
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<script>
    $(document).ready(function () {
        $('#TimeSheetTable').dataTable();
        $('.dataTables_filter').addClass('pull-right');
    });
    $('#edit').on('shown.bs.modal', function () {
        $('#myInput').trigger('focus')
    })


    $('#myModal').on('shown.bs.modal', function () {
        $('#myInput').trigger('focus')
    })

    $('#opportunity').on('shown.bs.modal', function () {
        $('#myInput').trigger('focus')
    })

    var CandidateDetailsURL = './CostDetails';
    $(function () {
        $("#TimeSheetTable").on("click", ".opportunityNumber", function () {
            // debugger;
            var $buttonClicked = $(this);
            var opportunityNumber = $buttonClicked.attr('data-id');
            var options = { "backdrop": "static", keyboard: true };
            $.ajax({
                type: "GET",
                url: CandidateDetailsURL,
                contentType: "application/json; charset=utf-8",
                data: { "opportunityNumber": opportunityNumber },
                datatype: "json",
                success: function (data) {
                    // debugger;
                    $('#myModalContent').html(data);
                    $('#myModal').modal(options);
                    $('#myModal').modal('show');
                },
                error: function () {
                    alert("Dynamic content load failed.");
                }
            });
        });

            $("#closbtn").click(function () {
                $('#myModal').modal('hide');
            });
        });


        $("#closbtn").click(function () {
            $('#myModal').modal('hide');
        });
   


</script>

