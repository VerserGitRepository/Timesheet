                resourceLabelText: 'RESOURCES',
                resources: JSON.parse(res),
                events: JSON.parse(events),
                //event.setExtendedProp( 'test', 'tester')

            });

            calendar.render();
            calendar.setOption('height', 700);
           calendar.setOption('aspectRatio', 2.0);
        });
       
    }
