<body>
    <div class="container" style="width:1800px; margin-bottom:700px">
        @*<div class="row" style="vertical-align:baseline;padding-top:10PX;margin-left:250px;">*@
        <div class="pull-left">
            <div class="row" style="vertical-align:baseline;padding-top:100PX;margin-left:70px;">
                <div class="form-group col-md-1" style="width:20%">
                    @Html.DropDownListFor(model => model.ProjectID, Model.Projectlist, "PROJECTS", new { @class = "form-control project", @id = "ddlProjectId" })
                </div>
                <div class="form-group col-md-1" style="width:22%">
                    @Html.DropDownListFor(model => model.OpportunityID, new SelectList(Enumerable.Empty<SelectListItem>()), "OPPORTUNITY", new { @class = "form-control .OpportunityNumberID", @id = "OpportunityID" })
                </div>
                <div class="form-group col-md-2" style="width:20%">
                    @Html.DropDownListFor(model => model.WarehouseID, Model.WarehouseNameList, "FACILITIES", new { @class = "form-control", id = "ddlWarehouseId" })
                </div>
                <div class="form-group col-md-3">

                    @Html.DropDownListFor(model => Model.ResourceIDs, Model.CandidateNameList, new { @id = "CandidateNameIdStatic", @style = "height:10px; width:10px;", @multiple = "multiple" })

                    @Html.HiddenFor(model => model.ResourceID)
                    <input class="hidden" type="text" id="hdnJsonString" value="@Model.jsonResources" />
                    <input class="hidden" type="text" id="hdnJsonEvents" value="@Model.jsonEvents" />
                </div>
                <div class="form-group col-md-1">
                    <button type="submit" value="Search" class="btn btn-warning" name="submitButton" style="border-color:lightgray;height:26px;margin-left:50px" OnClick="SearchAndRenderCalendar();">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>

                </div>
            </div>
            <div id='calendar-room' style="margin-left:20px;">
                <div id='calendar'></div>
            </div>

        </div>

    </div>
    <div id="main">

    </div>
    @*</div>*@
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" style="background-color:lightgray">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"><span id="eventTitle"></span></h4>
                </div>
                <div class="modal-body">
                    <p id="pDetails"></p>
                </div>
                <div class="modal-footer" style="background-color:lightgray;height:20%; padding:2px 2px;">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    @*<button type="button" class="btn btn-default">Update</button>*@
                </div>

            </div>
        </div>
    </div>
    <div id='resourceModal' class='modal'>
        <div class="modal-dialog">
            <div class="modal-content">
                <div id='resourceModalContent'></div>
            </div>
        </div>
    </div>
    <div id="spinner" style="display:none;">
        <img src="~/Images/ajax-loader.gif" />
    </div>
</body>

<script>
    $('#CandidateNameIdStatic').multiselect({
