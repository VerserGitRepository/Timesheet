<div class="container" style="margin-left:0px">
    @using (Html.BeginForm("ExportCompletedScheduls", "CompletedBooking", FormMethod.Post))
    {
        <div class="row" style="padding-left:20px">
            <button type="submit" class="btn btn-default btn-sm">
                <span class="glyphicon glyphicon-export"></span> Export
            </button>
        </div>
    }
        <div class="row" >
            <div class="col-md-12">
                <table id="TimeSheetTable" class="table table-striped table-bordered" cellspacing="0">
                    <thead style="background-color:#FFA500;color:white; ">
                        <tr>
                            <th>Resource</th>
                            <th>Opportunity</th>
                            <th>BookDate </th>
                            <th>StartTime</th>
                            <th>EndTime</th>
                            <th>Project</th>
                            <th>JobNo</th>
                            <th>Activity</th>
                            <th>OLA</th>
                            <th>Actual</th>
                            <th>Warehouse</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (TimeSheet.Models.CompletedTimesheetModel item in Model.CompletedTimeSheetList)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CandidateName)
                                    @*<a href="javascript:void(0);" class="CandidateDetail" data-id="@item.CandidateName">@Html.DisplayFor(modelItem => item.CandidateName)</a>*@
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OpportunityNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Day)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.StartTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EndTime)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.ProjectName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.JobNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Activity)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OLATarget)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ActualQuantity)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.WarehouseName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>


                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
<div id='myModal' class='modal'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>
<div id='EditModal' class='modal'>
    <div class="modal-dialog">
        <div class="modal-content">
