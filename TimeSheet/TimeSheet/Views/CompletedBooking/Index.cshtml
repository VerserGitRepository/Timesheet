<div class="container" style="padding-top:2px;padding-bottom:0px;margin-left:0px;padding-left:0px;padding-right:10px">

    @using (Html.BeginForm("ExportCompletedScheduls", "CompletedBooking", FormMethod.Post))
    {
        <div class="row">
            <button type="submit" class="btn btn-default btn-sm" style="padding-left:10px;padding-top:2px;margin-left:10px">
                <span class="glyphicon glyphicon-export"></span> Export
            </button>
        </div>
    }
    <div class="row">
        <div class="col-md-12" style="padding-left:0px">
            <table id="TimeSheetTable" class="table table-striped table-bordered" cellspacing="0">
                <thead style="background-color:#FFA500;color:white; ">
                    <tr>
                        <th>Resource</th>
                        <th>Opportunity</th>
                        <th>BookDate </th>
                        <th>StartTime</th>
                        <th>EndTime</th>
                        <th>Project</th>
                        <th>JobNo</th>
                        <th>Activity</th>
                        <th>OLA</th>
                        <th>Actual</th>
                        <th>BreakTime</th>
                        <th>Warehouse</th>
                        <th>Status</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (TimeSheet.Models.CompletedTimesheetModel item in Model.CompletedTimeSheetList)
                    {
                        <tr>
                            <td>
                                @if ((bool)Session["HasUserPermissionsToEdit"])
                                {
                                    <a href="javascript:void(0);" class="CandidateName" data-id="@item.CandidateName">@Html.DisplayFor(modelItem => item.CandidateName)</a>
                                }
                                else
                                {
                                    @Html.DisplayFor(modelItem => item.CandidateName)
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OpportunityNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Day)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.StartTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EndTime)
                            </td>
                            <td>
                                @if ((bool)Session["HasUserPermissionsToEdit"])
                                {
                                    <a href="javascript:void(0);" class="ProjectName" data-id="@item.ProjectName">@Html.DisplayFor(modelItem => item.ProjectName)</a>
                                }
                                else
                                {
                                    @Html.DisplayFor(modelItem => item.ProjectName)
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.JobNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Activity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OLATarget)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ActualQuantity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BreakHours)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.WarehouseName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div id='myModal' class='modal'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>
<div id='EditModal' class='modal'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='EditModalContent'></div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $('#TimeSheetTable').dataTable({
            responsive: true
        });
        $('.dataTables_filter').addClass('pull-right');


        $('#edit').on('shown.bs.modal', function () {
            $('#myInput').trigger('focus')
        })


        $('#myModal').on('shown.bs.modal', function () {
            $('#myInput').trigger('focus')
        })

        $('#opportunity').on('shown.bs.modal', function () {
            $('#myInput').trigger('focus')
        })

        var CandidateDetailsURL = './CandidateDetails';
        $(function () {
            $("#TimeSheetTable").on("click", ".CandidateName", function () {
                // debugger;
                var $buttonClicked = $(this);
                var CandidateName = $buttonClicked.attr('data-id');
                var options = { "backdrop": "static", keyboard: true };
                $.ajax({
                    type: "GET",
                    url: CandidateDetailsURL,
                    contentType: "application/json; charset=utf-8",
                    data: { "CandidateName": CandidateName },
                    datatype: "json",
                    success: function (data) {
                        // debugger;
                        $('#myModalContent').html(data);
                        $('#myModal').modal(options);
                        $('#myModal').modal('show');
                    },
                    error: function () {
                        alert("Dynamic content load failed.");
                    }
                });
            });

            var BookedDetailsURL = './ProjectDetail';
            $(function () {
                $("#TimeSheetTable").on("click", ".ProjectName", function () {
                    // debugger;
                    var $buttonClicked = $(this);
                    var ProjectName = $buttonClicked.attr('data-id');
                    var options = { "backdrop": "static", keyboard: true };
                    $.ajax({
                        type: "GET",
                        url: BookedDetailsURL,
                        contentType: "application/json; charset=utf-8",
                        data: { "ProjectName": ProjectName },
                        datatype: "json",
                        success: function (data) {
                            // debugger;
                            $('#myModalContent').html(data);
                            $('#myModal').modal(options);
                            $('#myModal').modal('show');
                        },
                        error: function () {
                            alert("Dynamic content load failed.");
                        }
                    });
                });

                $("#closbtn").click(function () {
                    $('#myModal').modal('hide');
                });
            });

            //$("#closebtn").on('click',function(){
            //    $('#myModal').modal('hide');

            $("#closbtn").click(function () {
                $('#myModal').modal('hide');
            });
        });
    });

</script>