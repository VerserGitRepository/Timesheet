@model  IEnumerable<TimeSheet.Models.CompletedTimesheetModel>
@{
    ViewBag.Title = "WeeklyReport";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.4.1.min.js" type="text/javascript"></script>
<link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.1.1/css/mdb.min.css" rel="stylesheet">
<link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
<script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
<div class="container" style="padding-top:2px;padding-bottom:0px;margin-left:0px;padding-left:0px;padding-right:10px;width:150%">

    @using (Html.BeginForm("ExportCompletedScheduls", "Finanace", FormMethod.Post))
    {
        <div class="row">
            <button type="submit" class="btn btn-default btn-sm" style="padding-left:10px;padding-top:2px;margin-left:10px;background-color:gray">
                <span class="glyphicon glyphicon-export"></span> Export
            </button>
        </div>
    }
    <div class="row">
        <div class="col-md-12">

            @*<div style="align-content:center;padding-top:15px;padding-bottom:40px;padding-left:20px;width:1200px">*@
            <table id="TimeSheetTable" class="table-bordered table-responsive-md text-center table-hover table-scroll" style="align-content:center;padding-bottom:10px;width:1200px">
                <thead style="background-color:#FFA500;color:white">
                    <tr>
                        <th>Id</th>
                        <th>CandidateName</th>
                        <th>Project</th>
                        <th>Activity</th>
                        @*<th style="width:50px">StartDate</th>
                        <th>StartTime</th>
                        <th style="width:50px">EndTime </th>
                        <th style="width:10px">OLA</th>
                        <th style="width:10px">Actual</th>
                        <th style="width:10px">Comments</th>*@
                        <th style="width:10px">Status</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td class="Id" id="activityId"> <span>@item.Id</span> </td>
                        <td class="CandidateName">
                            <span id="txtCandidateName">@item.CandidateName</span>
                        </td>
                        <td class="Project">
                            @Html.DisplayFor(modelItem => item.ProjectName)
                        </td>
                        <td class="Activity">
                            @Html.DisplayFor(modelItem => item.Activity)
                        </td>

                        @*<td class="Day" width="7%">
            <span>@item.Day.Value.ToShortDateString()</span>
            @Html.TextBoxFor(model => item.Day, "{0:yyyy-MM-dd}", new { @type = "date", @style = "display:none" })

        </td>
        <td class="StartTime">
            <span>@item.StartTime.Value.ToShortTimeString()</span>
            <input type="time" id="startTime" value="@item.StartTime.Value.ToString("HH:mm")" style="display:none" />
        </td>


        <td class="EndTime" width="8%">
            <span>@item.EndTime.Value.ToShortTimeString()</span>
            <input type="time" id="endTime" value="@item.EndTime.Value.ToString("HH:mm")" style="display:none" />
        </td>

        <td class="OLATarget">
            @Html.DisplayFor(modelItem => item.OLATarget)
        </td>
        <td class="ActualQuantity">
            <span style="width:2px">@item.ActualQuantity</span>
            <input type="text" id="txtActualQuantity" value="@item.ActualQuantity" style="display:none;width:30px" />
        </td>
        <td class="TimeSheetComments">
            <span>@item.TimeSheetComments</span>
            <input type="text" id="txtComments" value="@item.TimeSheetComments" style="display:none" />
        </td>*@
                        <td class="TimeSheetComments">
                            <span>@item.Status</span>
                            <input type="text" id="txtComments" value="@item.Status" style="display:none" />
                        </td>
                        <td>
                            <a href="javascript:void(0);" class="btn btn-warning btn-edit" @*class="CandidateDetail"*@ data-id="@item.CandidateName">
                                <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

<div id='myModal' class='modal'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>
<div id='EditModal' class='modal'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='EditModalContent'></div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#TimeSheetTable').dataTable({
            responsive: true
        });
        $('.dataTables_filter').addClass('pull-right');


        $('#edit').on('shown.bs.modal', function () {
            $('#myInput').trigger('focus')
        })


        $('#myModal').on('shown.bs.modal', function () {
            $('#myInput').trigger('focus')
        })

        $('#opportunity').on('shown.bs.modal', function () {
            $('#myInput').trigger('focus')
        })

        var CandidateDetailsURL = './ApprovedResourceDetails';
        $(function () {
            $("#TimeSheetTable").on("click", ".btn-edit", function () {
                //debugger;
                var $buttonClicked = $(this);
                var CandidateName = $buttonClicked.attr('data-id');
                var options = { "backdrop": "static", keyboard: true };
                $.ajax({
                    type: "GET",
                    url: CandidateDetailsURL,
                    contentType: "application/json; charset=utf-8",
                    data: { "CandidateName": CandidateName },
                    datatype: "json",
                    success: function (data) {
                        //  debugger;
                        $('#myModalContent').html(data);
                        $('#myModal').modal(options);
                        $('#myModal').modal('show');
                    },
                    error: function () {
                        alert("Dynamic content load failed.");
                    }
                });
            });

            var BookedDetailsURL = './ProjectDetail';
            $(function () {
                $("#TimeSheetTable").on("click", ".ProjectName", function () {
                    // debugger;
                    var $buttonClicked = $(this);
                    var ProjectName = $buttonClicked.attr('data-id');
                    var options = { "backdrop": "static", keyboard: true };
                    $.ajax({
                        type: "GET",
                        url: BookedDetailsURL,
                        contentType: "application/json; charset=utf-8",
                        data: { "ProjectName": ProjectName },
                        datatype: "json",
                        success: function (data) {
                            // debugger;
                            $('#myModalContent').html(data);
                            $('#myModal').modal(options);
                            $('#myModal').modal('show');
                        },
                        error: function () {
                            alert("Dynamic content load failed.");
                        }
                    });
                });

                $("#closbtn").click(function () {
                    $('#myModal').modal('hide');
                });
            });

            $("#closbtn").click(function () {
                $('#myModal').modal('hide');
            });
        });
    });

</script>
<style>
    .glyphicon {
        padding-top:0px;
        font-size: 10px;
        
    }

    .btn-primary, .btn-primary:hover, .btn-primary:active, .btn-primary:visited {
        background-color: #FFA500;
        border-color: white;
    }

    </style>