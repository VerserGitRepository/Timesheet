<div class="container" style="padding-top:0px;padding-bottom:0px;margin-left:0px;padding-left:0px;padding-right:10px;width:150%">

    @using (Html.BeginForm("ExportCompletedSchedule", "Finanace", FormMethod.Post))
    {
        <div class="row">
            <button type="submit" class="btn btn-default btn-sm" style="padding-left:10px;padding-top:2px;margin-left:10px;background-color:lightgray">
                <span class="glyphicon glyphicon-export"></span> Export
            </button>
        </div>
    }
    <div class="row">
        <div class="col-md-12">

            <table id="TimeSheetTable" class="table table-striped table-bordered" cellspacing="0">
                <thead style="background-color:#FFA500;color:white">
                    <tr>
                        <th>Project Manager</th>
                        <th>Resource</th>
                        <th>Activity</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Comments</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (TimeSheet.Models.TimeSheetViewModel item in Model.CandidateTimeSheetList)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProjectManager)

                        </td>
                        <td>
                            <span id="txtCandidateName">@item.CandidateName</span>

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Activity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Day)
                        </td>
                       
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TimeSheetComments)
                        </td>

                        
                    </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

<div id='myModal' class='modal'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>
<div id='EditModal' class='modal'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='EditModalContent'></div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#TimeSheetTable').dataTable({
            responsive: true
        });
        $('.dataTables_filter').addClass('pull-right');


        $('#myModal').on('shown.bs.modal', function () {
            $('#myInput').trigger('focus')
        })

        var CandidateDetailsURL = './ApprovedResourceDetails';
        $(function () {
            $("#TimeSheetTable").on("click", ".btn-edit", function () {
                //debugger;
                var $buttonClicked = $(this);
                var CandidateName = $buttonClicked.attr('data-id');
                var options = { "backdrop": "static", keyboard: true };
                $.ajax({
                    type: "GET",
                    url: CandidateDetailsURL,
                    contentType: "application/json; charset=utf-8",
                    data: { "CandidateName": CandidateName },
                    datatype: "json",
                    success: function (data) {
                        //  debugger;
                        $('#myModalContent').html(data);
                        $('#myModal').modal(options);
                        $('#myModal').modal('show');
                    },
                    error: function () {
                        alert("Dynamic content load failed.");
                    }
                });
            });

        });
    });
     function ApprovePayment(rowId) {
        var row = $(rowId).closest("tr");
        var candidateName = row.find("#txtCandidateName").text();
        var options = { "backdrop": "static", keyboard: true };
        $.confirm({
            title: 'Confirm!',
            content: 'Are you sure you want to approve the payments for ,' + candidateName + '?',
            buttons: {
                confirm: function () {
                       $.ajax({
                        data: { CandidateName: candidateName },
                        url: '@Url.Action("ApprovePaymentBulk", "Projection")',
                        type: "POST",
                        success: function (data) {
                            if (data.status === 'OK') {
                                window.location.href = data.Url
                            }

                        }

                    });
                    location.reload();

                },
                cancel: function () {

                    return;
                }
            }

        });

    }

</script>
