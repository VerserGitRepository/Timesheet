<body>
    <div class="container" style="margin-left:0px;width:150%;margin-bottom:700px;margin-right:2px;margin-top:2px">
        <div class="row" style="vertical-align:baseline;padding-top:2px;margin-left:250px;">
            <div class="pull-left col-md-offset-0" style="padding-right:2px;margin-right:2px">
                <div class="form-group col-md-2" style="width:18%">
                    @Html.DropDownListFor(model => model.ProjectID, Model.Projectlist, "PROJECTS", new { @class = "form-control project", @id = "ddlProjectId" })
                </div>
                <div class="form-group col-md-3" style="width:22%">
                    @Html.DropDownListFor(model => model.OpportunityID, new SelectList(Enumerable.Empty<SelectListItem>()), "OPPORTUNITY", new { @class = "form-control .OpportunityNumberID" })
                </div>
                <div class="form-group col-md-2" style="width:18%">
                    @Html.DropDownListFor(model => model.WarehouseID, Model.WarehouseNameList, "FACILITIES", new { @class = "form-control", id = "ddlWarehouseId" })
                </div>
                <div class="form-group col-md-1" style="padding-right:2px;margin-right:2px">
                    @Html.DropDownListFor(model => Model.ResourceIDs, Model.CandidateNameList, new { @id = "CandidateNameId", @style = "height:10px; width:7px;", @multiple = "multiple" })
                    @Html.HiddenFor(model => model.ResourceID)
                </div>
            </div>
            <div class="form-group col-md-1">
                <button type="submit" value="Search" class="btn btn-warning" name="submitButton" style="border-color:lightgray;height:26px" OnClick="SearchAndRenderCalendar();">
                    <span class="glyphicon glyphicon-search"></span>
                </button>
            </div>
        </div>

        <div class="calendar-room" style="margin-left:0px;">

            <div id="calender" class="col-md-12" style="width:100%; display: inline-block; font-size:17px"></div>

            <div id="myModal" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header" style="background-color:lightgray">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title"><span id="eventTitle"></span></h4>
                        </div>
                        <div class="modal-body">
                            <p id="pDetails"></p>
                        </div>
                        <div class="modal-footer" style="background-color:lightgray;height:20%; padding:2px 2px;">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="container">
                <div class="modal fade" id="ModalAddForm" data-backdrop="static">
                    <div class="modal-dialog" style="width:850px;">
                        <div class="modal-content">
                            <div class="modal-header" style="background-color:#959ca1;">
                                <div>
                                    <h5 ALIGN="CENTER" style="color:white">REGISTER TIMESHEET</h5>
                                </div>
                                <button class="close btn-lg" data-dismiss="modal">&times;</button>
                            </div>
                            <div class="modal-body" id="ModalAddFormLoad">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</body>
