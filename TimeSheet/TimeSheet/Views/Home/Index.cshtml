<table class="table pull-right" style="width:50%;margin-right:170px;">
    <thead>
        <tr>
            <th class="col-md-2">
                @Html.DropDownListFor(model => model.ProjectID, Model.Projectlist, "PROJECT", new { @class = "form-control project", @id = "ddlProjectId" })
            </th>
            <th class="col-md-2">
                @Html.DropDownListFor(model => model.OpportunityID, new SelectList(Enumerable.Empty<SelectListItem>()), "OPPORTUNITY", new { @class = "form-control OpportunityNumberID" })
            </th>
            <th class="col-md-2">
                @Html.DropDownListFor(model => model.WarehouseID, Model.WarehouseNameList, "WAREHOUSE", new { @class = "form-control", id = "ddlWarehouseId" })
            </th>
            <th class="col-md-2">
                @Html.DropDownListFor(model => Model.ResourceIDs, Model.CandidateNameList, new { @id = "CandidateNameId", @style = "height:7px; width:7px;", @multiple = "multiple" })
                @Html.HiddenFor(model => model.ResourceID)
            </th>
            <th class="col-md-1">
                <button type="submit" value="Search" class="btn btn-warning" name="submitButton" style="border-color:lightgray;padding-left:15px;margin-left:2px;height: 26px;" OnClick="SearchAndFetchResourceDetails();">
                    <span class="glyphicon glyphicon-search " style=""></span>
                </button>
            </th>
            <th class="col-md-1">
                @using (Html.BeginForm("ExportTimesSheetToExcel", "Home", FormMethod.Post))
                {
                    <button type="submit" value="ExportToExcel" class="btn btn-secondary" name="submitButton" style="border-color:lightgray;height: 26px;">
                        <span class="glyphicon glyphicon-export black"></span>
                    </button>
                }
                </th>
        </tr>
    </thead>    
</table>

<div class="container" style="margin-left:0px">
    <div class="row">
        <div class="col-md-11">            
